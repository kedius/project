{% extends '::base.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    body {
        background: #CCC;
    }
    .login-place {
        width: 350px;
        left: 50%;
        position: fixed;
        margin-left: -200px;
        top: 30%;
        box-shadow: 2px 2px 7px #000;
    }
</style>
{% endblock %}
{%  block body %}
<div class="login-place">
    <div class="panel panel-default margin-bottom-0">
        <div class="panel-heading">
            <h3 class="panel-title">Вход</h3>
        </div>
        <div class="panel-body">
            {% if error %}
                <div class="alert alert-danger fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    {{ error.message }}
                </div>
            {% endif %}
            <form action="{{ path('_security_check') }}" method="POST">
                <div class="container col-sm-12">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-xs-8 col-sm-9">
                            <input class="form-control" type="password" id="password" name="_password" required="required"/>
                        </div>
                        <div class="col-xs-4 col-sm-3 btn-login-place">
                            <input type="submit" name="login" value="Войти" class="btn btn-primary" />
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 ">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked />
                            <label for="remember_me" class="label-remember-me">Запомнить меня</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}